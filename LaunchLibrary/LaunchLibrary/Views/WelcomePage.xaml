<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaunchLibrary.Views.WelcomePage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Welcome">
    <ContentPage.Content
        >
        <ScrollView
            Padding="10"
            BindingContext="{Binding Welcome}">

            <StackLayout VerticalOptions="CenterAndExpand">
                
                <Grid>
                    <Button
                       Text="Agencies" BackgroundColor="#73c6b6" Grid.Row="0" Grid.Column="0" Command="{Binding AgenciesCommand}">
                        
                    </Button>
                    <Button
                       Text="Rockets"  BackgroundColor="#7dcea0" Grid.Row="0" Grid.Column="1" Command="{Binding RocketsCommand}">

                    </Button>
                </Grid>
            </StackLayout>
            
        </ScrollView>
    </ContentPage.Content>
</ContentPage>